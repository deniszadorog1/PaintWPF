<UserControl x:Class="PaintWPF.CustomControls.BrushesMenu.BrushMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaintWPF.CustomControls.BrushesMenu"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid Background="White" Height="30" Width="300">
        <Button Name="ItemBut">
            <Grid Width="300" Height="30" >
                <!-- <Canvas Name="IfChosen" HorizontalAlignment="Left" Width="3" Height="30" Background="Blue"/> -->
                <Label Name ="BrushName" HorizontalAlignment="Left" 
               Content="BrushName" FontSize="12" VerticalAlignment="Center"
               Margin="5 -5 0 0"/>
                <Image Name="BrushImage" HorizontalAlignment="Right" Width="150" Height="30" Margin="0 0 10 0" Source="/Images/Other/InProgress.png"/>
            </Grid>
        </Button>
    </Grid>
</UserControl>
