<UserControl x:Class="PaintWPF.CustomControls.SubMenu.SubMenuElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaintWPF.CustomControls.SubMenu"
             mc:Ignorable="d" d:DesignWidth="200" Height="30" Width="200">
    <Grid Height="30"  Width="200">
        <Button x:Name="SelfBut" Background="#FFD0D0D0" BorderBrush="White" 
                Padding="0" HorizontalContentAlignment="Left"  HorizontalAlignment="Left" Width="200">
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="198">
                <Image x:Name="ItemImage" Height="20" Width="20" VerticalAlignment="Center" 
                    Source="/Images/Other/InProgress.png" Margin="0"/>
                <Label x:Name="ItemText" Content="Test" VerticalAlignment="Center" FontSize="12" Margin="0"/>
            </WrapPanel>
        </Button>
    </Grid>
</UserControl>
