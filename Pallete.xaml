    <Window.Resources>
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="outerEllipse"
                             Stroke="{TemplateBinding BorderBrush}"
                             StrokeThickness="0.0" />
                            <Ellipse x:Name="innerEllipse" Margin="2"
                             Fill="{TemplateBinding Background}"
                             Stroke="{TemplateBinding BorderBrush}"
                             StrokeThickness="0.5" />
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="25"/>
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
        </Style>

        <Style x:Key="RoundButtonStylee" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Name ="ElGrid">
                            <Ellipse x:Name="outerEllipse"
                                     Stroke="{TemplateBinding BorderBrush}"
                                     StrokeDashArray="5 5"
                                     Opacity="0.5"
                                     StrokeThickness="1"
                                     Margin="2"
                                     IsHitTestVisible="True"/>
                            <Ellipse x:Name="innerEllipse" Margin="2"
                             Fill="{TemplateBinding Background}"
                             Stroke="{TemplateBinding BorderBrush}"
                                      StrokeDashArray="5 5"
                             StrokeThickness="0.5" />

                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="25"/>
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>

            <EventSetter Event="Click" Handler="UserColor_Click"/>
            <EventSetter Event="MouseEnter" Handler="MyButton_MouseEnter"/>
            <EventSetter Event="MouseLeave" Handler="MyButton_MouseLeave"/>
        </Style>

        <Style x:Key="SpectreCircle" TargetType="Button">
            <Setter Property ="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="outerEllipse"
                                     Stroke="{TemplateBinding BorderBrush}"
                                     Opacity="0.9"
                                     StrokeThickness="2"
                                     />
                            <Ellipse x:Name="innerEllipse" Margin="2"
                             Fill="{TemplateBinding Background}"
                                      StrokeDashArray="5 5"
                                     Opacity="0"
                             StrokeThickness="0.5" />
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="15"/>
            <Setter Property="Width" Value="15"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
        </Style>

        <Style x:Key="ValueGradCircle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType ="Button">
                        <Grid>
                            <Ellipse x:Name="outerEllipse"
                                     Stroke="{TemplateBinding BorderBrush}"
                                     Opacity="0.9"
                                     StrokeThickness="2"
                                     />
                            <Ellipse x:Name="innerEllipse" Margin="2"
                             Fill="Black"
                                      StrokeDashArray="5 5"
                                     Opacity="0.9"
                             StrokeThickness="0.5" />
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="15"/>
            <Setter Property="Width" Value="15"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
        </Style>


        <LinearGradientBrush x:Name="OneMoreGrad" x:Key="Spectrum" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="Red" Offset="0.0"/>
            <GradientStop Color="Orange" Offset="0.1"/>
            <GradientStop Color="Yellow" Offset="0.2"/>
            <GradientStop Color="#06ff05" Offset="0.3"/>
            <GradientStop Color="#12f9ff" Offset="0.4"/>
            <GradientStop Color="Blue" Offset="0.5"/>
            <GradientStop Color="#ff06e2" Offset="0.6"/>
            <GradientStop Color="Red" Offset="0.7"/>
        </LinearGradientBrush>

        <DrawingBrush x:Key="SpectrumWithVerticalFade">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <!-- Horizontal gradient from left to right -->
                    <GeometryDrawing>
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,1,1" />
                        </GeometryDrawing.Geometry>
                        <GeometryDrawing.Brush>
                            <LinearGradientBrush x:Name="gradientBrusha" StartPoint="0,0" EndPoint="1,0">
                                <!-- Red -->
                                <GradientStop  Color="#FF0000" Offset="0.00"/>

                                <!-- Orange -->
                                <GradientStop Color="Orange" Offset="0.17"/>

                                <!-- Yellow -->
                                <GradientStop Color="Yellow" Offset="0.33"/>

                                <!-- Green -->
                                <GradientStop Color="#06ff05" Offset="0.50"/>

                                <!-- Cyan -->
                                <GradientStop Color="#12f9ff" Offset="0.67"/>

                                <!-- Blue -->
                                <GradientStop Color="Blue" Offset="0.83"/>

                                <!-- Magenta -->
                                <GradientStop Color="#ff06e2" Offset="0.92"/>

                                <!-- Red -->
                                <GradientStop Color="Red" Offset="1.00"/>
                            </LinearGradientBrush>
                        </GeometryDrawing.Brush>
                    </GeometryDrawing>
                    <!-- Vertical gradient from top to bottom to white -->
                    <GeometryDrawing>
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,1,1" />
                        </GeometryDrawing.Geometry>
                        <GeometryDrawing.Brush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="Transparent" Offset="0.0"/>
                                <GradientStop Color="#FFFFFF" Offset="0.99"/>
                            </LinearGradientBrush>
                        </GeometryDrawing.Brush>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
